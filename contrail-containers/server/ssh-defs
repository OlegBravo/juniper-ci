ENV_FILE="$WORKSPACE/cloudrc"

source $ENV_FILE

SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ServerAliveInterval=30"

SCP="scp -i $ssh_key_file $SSH_OPTS"

SSH_DEST="$SSH_USER@$public_ip_helm"
SSH="ssh -i $ssh_key_file $SSH_OPTS $SSH_DEST"

SSH_DEST_BUILD="$SSH_USER@$public_ip_build"
SSH_BUILD="ssh -i $ssh_key_file $SSH_OPTS $SSH_DEST_BUILD"
