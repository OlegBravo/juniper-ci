provider_config:
 bms:
   domainsuffix: local
   ssh_user: ${SSH_USER}
   ssh_pwd:

instances:
 server1:
     ip: ${IP_CONT_01}
     provider: bms
     roles:
         openstack: null
         analytics: null
         analytics_database: null
         config: null
         config_database: null
         control: null
         webui: null
 server2:
     ip: ${IP_CONT_02}
     provider: bms
     roles:
         openstack: null
         analytics: null
         analytics_database: null
         config: null
         config_database: null
         control: null
         webui: null
 server3:
     ip: ${IP_CONT_03}
     provider: bms
     roles:
         openstack: null
         analytics: null
         analytics_database: null
         config: null
         config_database: null
         control: null
         webui: null
 server4:
     ip: ${IP_COMP_01}
     provider: bms
     roles:
         openstack_compute: null
         vrouter: null

global_configuration:
 REGISTRY_PRIVATE_INSECURE: True
 CONTAINER_REGISTRY: ${CONTAINER_REGISTRY}

contrail_configuration:
 CONTRAIL_VERSION: ${CONTRAIL_VERSION}
 CLOUD_ORCHESTRATOR: openstack
 METADATA_PROXY_SECRET: c0ntrail123
 CONTROLLER_NODES: ${IP_CONT_01},${IP_CONT_02},${IP_CONT_03}
 AUTH_MODE: keystone
 KEYSTONE_AUTH_ADMIN_PASSWORD: password
 KEYSTONE_AUTH_HOST: ${IP_VIP}
 KEYSTONE_AUTH_URL_VERSION: "/v3"
 RABBITMQ_NODE_PORT: 5673
 IPFABRIC_SERVICE_IP: ${IP_VIP}
 AAA_MODE: cloud-admin
 PHYSICAL_INTERFACE: ${IF2}
 VROUTER_GATEWAY: ${IP_GW}
 CONFIG_NODEMGR__DEFAULTS__minimum_diskGB: "2"
 DATABASE_NODEMGR__DEFAULTS__minimum_diskGB: "2"
 SSL_ENABLE: ${SSL_ENABLE}
 JVM_EXTRA_OPTS: "-Xms1g -Xmx2g"
 METADATA_SSL_ENABLE: true

kolla_config:
 kolla_globals:
   kolla_internal_vip_address: ${IP_VIP}
   kolla_external_vip_address: ${IP_VIP}
   network_interface: ${IF1}
   kolla_external_vip_interface: ${IF1}
   contrail_api_interface_address: ${IP_CONT_01}
   docker_namespace: kolla
   enable_ironic: "no"
   enable_swift: "no"
   tls_bind_info_internal: "yes"
   metadata_ssl_enable: "yes"
 kolla_passwords:
   metadata_secret: c0ntrail123
   keystone_admin_password: password
